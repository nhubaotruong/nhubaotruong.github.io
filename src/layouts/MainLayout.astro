---
import "../styles/index.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=inter:100,200,300,400,500,600,700,800,900" rel="stylesheet" />
    <title>Nhu Bao Truong</title>
  </head>
  <body class="bg-black text-white min-h-screen">
    <!-- Background gradient -->
    <div class="fixed inset-0 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] pointer-events-none"></div>
    <!-- Background orbs -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute left-1/2 top-1/2 -translate-x-[60%] -translate-y-1/2 w-[30rem] h-[30rem] bg-[#646cff]/20 rounded-full blur-3xl mix-blend-screen animate-float-slow"></div>
      <div class="absolute left-1/2 top-1/2 -translate-x-[40%] -translate-y-1/2 w-[30rem] h-[30rem] bg-[#ff6b6b]/20 rounded-full blur-3xl mix-blend-screen animate-float-slower"></div>
    </div>
    <slot />
  </body>
</html>

<style>
  @keyframes float-slow {
    0%, 100% { transform: translate(-60%, -50%) translateY(-2rem); }
    50% { transform: translate(-60%, -50%) translateY(2rem); }
  }
  @keyframes float-slower {
    0%, 100% { transform: translate(-40%, -50%) translateY(2rem); }
    50% { transform: translate(-40%, -50%) translateY(-2rem); }
  }
  .animate-float-slow {
    animation: float-slow 6s ease-in-out infinite;
  }
  .animate-float-slower {
    animation: float-slower 8s ease-in-out infinite;
  }
</style>

<script>
  import pako from "pako";
  document.addEventListener(
    "DOMContentLoaded",
    () => {
      const text = ``;
      const decodedText = String.fromCharCode.apply(
        null,
        Array.from(
          pako.ungzip(Uint8Array.from(atob(text), (c) => c.charCodeAt(0))),
        ),
      );
      console.log(decodedText);
      document.body.prepend(document.createComment(decodedText));
    },
    { once: true },
  );
</script>
