---
interface Props {
  title: string;
  description: string;
  icon: string;
  delay?: number;
}

const { title, description, icon, delay = 0 } = Astro.props;
---

<div
  class="group relative overflow-hidden rounded-xl border border-white/10 bg-gradient-to-br from-neutral-900/90 to-neutral-900/50 p-8 hover:border-white/20"
  style={`--delay: ${delay}ms`}
>
  <div class="relative z-10 flex flex-col gap-4">
    <span class="text-3xl">{icon}</span>
    <div class="space-y-2">
      <h3 class="text-xl font-bold text-white">{title}</h3>
      <p class="text-sm text-neutral-300">{description}</p>
    </div>
  </div>
  <div
    class="absolute inset-0 z-0 bg-gradient-to-br from-violet-600/20 via-transparent to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"
  >
  </div>
</div>

<style>
  div {
    opacity: 0;
    animation: fade-in 0.5s ease forwards;
    animation-delay: var(--delay, 0ms);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style> 