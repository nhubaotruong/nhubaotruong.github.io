---
interface Props {
  text: string;
  className?: string;
}

const { text, className = "" } = Astro.props;
---

<div
  class:list={["animate-text-reveal overflow-hidden", className]}
>
  <div class="translate-y-full animate-slide-in">
    {text}
  </div>
</div>

<style>
  @keyframes slide-in {
    to {
      transform: translateY(0);
    }
  }

  .animate-slide-in {
    animation: slide-in 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0ms);
  }

  .animate-text-reveal {
    opacity: 0;
    animation: fade-in 0.01s forwards;
    animation-delay: var(--delay, 0ms);
  }

  @keyframes fade-in {
    to {
      opacity: 1;
    }
  }
</style> 