---
import Layout from "../layouts/Layout.astro";
import GithubIcon from "../assets/github.svg?raw";
import LinkedinIcon from "../assets/linkedin.svg?raw";
import EmailIcon from "../assets/email.svg?raw";
import SkillBox from "../components/SkillBox.astro";
import Contact from "../components/Contact.astro";
---

<Layout title="Nhu Bao Truong | Software Engineer">
	<main>
		<div class="max-w-4xl mx-auto px-8 pb-16 md:pb-0">
			<section class="text-center pt-16 pb-12 md:pt-16 md:pb-12">
				<div class="mb-8">
					<img 
						src="/avatar.webp" 
						alt="Nhu Bao Truong" 
						loading="eager"
						decoding="async"
						fetchpriority="high"
						class="w-48 h-48 rounded-full mx-auto mb-8 object-cover border-4 border-indigo-500/20 transition-all duration-300 transform hover:-translate-y-1 hover:scale-105 hover:shadow-xl hover:shadow-indigo-500/20"
					/>
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-indigo-500 to-cyan-400 bg-clip-text text-transparent leading-tight py-2">
						Hi, I'm Nhu Bao Truong
					</h1>
					<p class="text-xl md:text-2xl text-indigo-300 mt-4 mb-8">Software Engineer â€¢ Linux Enthusiast</p>
				</div>
				<div class="flex justify-center gap-4 md:gap-6">
          <Contact href="https://github.com/nhubaotruong" icon={GithubIcon} alt="GitHub" />
          <Contact href="https://linkedin.com/in/nhubaotruong" icon={LinkedinIcon} alt="LinkedIn" />
          <Contact href="mailto:nhubaotruong@proton.me" icon={EmailIcon} alt="Email" isEmail />
				</div>
			</section>

			<section>
				<h2 class="text-4xl text-indigo-300 mb-6 font-bold">About Me</h2>
				<p class="text-lg text-white/90 leading-relaxed text-balance">
					I'm a Software Engineer with a strong focus on Backend Development and DevOps practices. 
					My expertise lies in building robust, scalable systems and automating deployment processes.
				</p>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
					<SkillBox title="Backend Development" description="Experienced in designing and implementing scalable APIs, microservices, and database architectures." />

					<SkillBox title="Continuous Deployment" description="Proficient in CI/CD pipelines, container orchestration, and infrastructure automation." />
          
					<SkillBox title="Linux" description="Passionate Linux user and advocate, experienced in system administration and shell scripting." />
					
				</div>
			</section>
		</div>
	</main>
	<button 
		id="fun-button"
		class="fixed bottom-4 right-4 md:bottom-8 md:right-8 bg-gradient-to-br from-indigo-600 via-indigo-700 to-indigo-800 text-indigo-100 px-4 py-2 md:px-6 md:py-3 text-sm md:text-base rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105 animate-bounce cursor-pointer font-semibold flex items-center gap-2"
	>
		<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 md:h-5 md:w-5" viewBox="0 0 20 20" fill="currentColor">
			<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-7.536 5.879a1 1 0 001.415 0 3 3 0 014.242 0 1 1 0 001.415-1.415 5 5 0 00-7.072 0 1 1 0 000 1.415z" clip-rule="evenodd" />
		</svg>
		Bored? Click me!
	</button>
</Layout>

<script>
  const funButton = document.getElementById('fun-button');
  if (funButton) {
    funButton.addEventListener('click', () => {
      const chars = [100, 81, 119, 52, 119, 57, 87, 103, 88, 99, 81];
      window.open(
        `https://youtu.be/${chars.map(c => String.fromCharCode(c)).join('')}`,
        '_blank',
        'noopener,noreferrer'
      );
    });
  }
</script>
